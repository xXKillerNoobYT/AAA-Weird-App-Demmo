{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ApplicationSettings": {
    "EnableSwagger": false,
    "MaxRequestSize": 10485760,
    "RequestTimeout": 30
  },
  "HealthCheck": {
    "AuthServiceTimeoutSeconds": 3
  },
  "Authentication": {
    "Authority": "https://login.microsoftonline.com/{tenant-id}",
    "Audience": "api://cloudwatcher-prod",
    "ClientId": "00000000-0000-0000-0000-000000000000",
    "ClientSecret": "replace-with-production-secret",
    "TenantId": "{tenant-id}",
    "Issuer": "https://login.microsoftonline.com/{tenant-id}/v2.0",
    "AllowUnauthenticatedRequests": false,
    "EnableLocalJwtValidation": false
  },
  "HealthChecks": {
    "Enabled": true,
    "IncludeDetails": false,
    "Database": {
      "Enabled": true
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=$DB_HOST;Port=5432;Database=$DB_NAME;Username=$DB_USER;Password=$DB_PASSWORD;SSL Mode=Require"
  }
}
