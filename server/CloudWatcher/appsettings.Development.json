{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "CloudWatcher": "Debug"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=CloudWatcherDev;Username=postgres;Password=devpassword;Include Error Detail=true"
  },
  "Authentication": {
    "Authority": "https://login.microsoftonline.com/common/v2.0",
    "Audience": "api://cloudwatcher-dev",
    "ClientId": "00000000-0000-0000-0000-000000000000",
    "ClientSecret": "dev-secret-placeholder",
    "AllowUnauthenticatedRequests": true,
    "EnableLocalJwtValidation": true
  },
  "ApplicationSettings": {
    "EnableSwagger": true,
    "MaxRequestSize": 52428800,
    "RequestTimeout": 60
  },
  "HealthChecks": {
    "Enabled": true,
    "IncludeDetails": true,
    "Database": {
      "Enabled": true
    }
  }
  ,
  "LocalAuth": {
    "ApiKey": "dev-local-key"
  }
}
