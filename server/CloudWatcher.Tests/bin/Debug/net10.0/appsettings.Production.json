{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "ApplicationSettings": {
    "EnableSwagger": false,
    "MaxRequestSize": 10485760,
    "RequestTimeout": 30
  },
  "Authentication": {
    "AllowUnauthenticatedRequests": false,
    "EnableLocalJwtValidation": false
  },
  "HealthChecks": {
    "Enabled": true,
    "IncludeDetails": false,
    "Database": {
      "Enabled": true
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=$DB_HOST;Port=5432;Database=$DB_NAME;Username=$DB_USER;Password=$DB_PASSWORD;SSL Mode=Require"
  }
}
