{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=CloudWatcherDev;Username=postgres;Password=devpassword;Include Error Detail=true",
    "SqlServerConnection": "Server=localhost;Database=CloudWatcher;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=true"
  },
  "CloudStorage": {
    "Provider": "Local",
    "LocalPath": "../Cloud",
    "SharePoint": {
      "SiteUrl": "",
      "ClientId": "",
      "ClientSecret": "",
      "TenantId": ""
    },
    "GoogleDrive": {
      "CredentialsPath": "",
      "FolderId": ""
    }
  },
  "ApplicationSettings": {
    "ApiVersion": "v2",
    "EnableSwagger": true,
    "MaxRequestSize": 10485760,
    "RequestTimeout": 30
  },
  "HealthCheck": {
    "AuthServiceTimeoutSeconds": 5
  },
  "Authentication": {
    "Authority": "https://login.microsoftonline.com/common/v2.0",
    "Audience": "api://CloudWatcher",
    "ClientId": "your-azure-ad-client-id",
    "ClientSecret": "your-azure-ad-client-secret",
    "TenantId": "your-tenant-id",
    "Issuer": "https://login.microsoftonline.com/{tenantId}/v2.0",
    "AllowUnauthenticatedRequests": true,
    "EnableLocalJwtValidation": true,
    "TokenClaimMappings": {
      "UserId": "oid",
      "Email": "email",
      "Name": "name",
      "Roles": "roles"
    }
  },
  "HealthChecks": {
    "Enabled": true,
    "IncludeDetails": true,
    "Database": {
      "Enabled": true
    }
  },
  "InventoryAuditRetention": {
    "Months": 9,
    "DryRun": false,
    "RunIntervalHours": 24
  }
}
